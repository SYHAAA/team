<!DOCTYPE html>
<html class="x-admin-sm">
    
    <head>
        <meta charset="UTF-8">
        <title>单选题</title>
        <meta name="renderer" content="webkit">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        <meta name="viewport" content="width=device-width,user-scalable=yes, minimum-scale=0.4, initial-scale=0.8,target-densitydpi=low-dpi" />
        <link rel="stylesheet" href="./css/font.css">
        <link rel="stylesheet" href="./css/xadmin.css">
        <script type="text/javascript" src="./lib/layui/layui.js" charset="utf-8"></script>
        <script type="text/javascript" src="./js/xadmin.js"></script>
        <!-- 让IE8/9支持媒体查询，从而兼容栅格 -->
        <!--[if lt IE 9]>
            <script src="https://cdn.staticfile.org/html5shiv/r29/html5.min.js"></script>
            <script src="https://cdn.staticfile.org/respond.js/1.4.2/respond.min.js"></script>
        <![endif]-->
    </head>
    <body>
        <div class="layui-fluid">
            <div class="layui-row">
                <form class="layui-form" lay-filter="fm-filter">
                    <input type="hidden" name="subjectId">
                    <input type="hidden" name="subjectType.typeId" value="2" >
                    <div class="layui-form-item">
                        <label class="layui-form-label">题目知识点</label>
                        <div class="layui-input-block">
                            <input type="radio" name="subjectPoints" value="JAVA" lay-skin="primary" title="JAVA" >
                            <input type="radio" name="subjectPoints" value="HTML" lay-skin="primary" title="HTML" >
                            <input type="radio" name="subjectPoints" value="CSS" lay-skin="primary" title="CSS" >
                            <input type="radio" name="subjectPoints" value="JS" lay-skin="primary" title="JS" >
                            <input type="radio" name="subjectPoints" value="ORACLE" lay-skin="primary" title="ORACLE" >
                        </div>
                    </div>
                  <div class="layui-form-item layui-form-text">
					<label class="layui-form-label">题目</label>
					<div class="layui-input-block">
					  <textarea placeholder="请输入内容" name="subjectContent" class="layui-textarea" lay-verify="required" required=""></textarea>
					</div>
				  </div>
				  <div class="layui-form-item">
					<label class="layui-form-label">A选项</label>
					<div class="layui-input-block">
					  <input type="text" name="optionsA" lay-verify="required" autocomplete="off" placeholder="请输入选项内容" class="layui-input" required="" >
					</div>
				  </div>
				  <div class="layui-form-item">
					<label class="layui-form-label">B选项</label>
					<div class="layui-input-block">
					  <input type="text" name="optionsB" lay-verify="required" autocomplete="off" placeholder="请输入选项内容" class="layui-input" required="" >
					</div>
				  </div>
				  <div class="layui-form-item">
					<label class="layui-form-label">C选项</label>
					<div class="layui-input-block">
					  <input type="text" name="optionsC" lay-verify="required" autocomplete="off" placeholder="请输入选项内容" class="layui-input" required="">
					</div>
				  </div>
				  <div class="layui-form-item">
					<label class="layui-form-label">D选项</label>
					<div class="layui-input-block">
					  <input type="text" name="optionsD" lay-verify="title" autocomplete="off" placeholder="请输入选项内容" class="layui-input">
					</div>
				  </div>
                  
                  <div class="layui-form-item">
                      <label class="layui-form-label">答案</label>
                      <div class="layui-input-block">
                        <input type="radio" name="subjectAnswer" value="A" lay-skin="primary" title="A" >
                        <input type="radio" name="subjectAnswer" value="B" lay-skin="primary" title="B" >
                        <input type="radio" name="subjectAnswer" value="C" lay-skin="primary" title="C" >
						<input type="radio" name="subjectAnswer" value="D" lay-skin="primary" title="D" >
                      </div>
                  </div>
				  
				  <div class="layui-form-item layui-form-text">
					<label class="layui-form-label">解析</label>
					<div class="layui-input-block">
					  <textarea placeholder="请输入解析" name="subjectAnalytical" class="layui-textarea"></textarea>
					</div>
				  </div>
                  
                  <div class="layui-form-item">
                      <label class="layui-form-label"></label>
                      <button  class="layui-btn" lay-filter="add" lay-submit="">
                          更新
                      </button>
                  </div>
              </form>
            </div>
        </div>
        <script>
        layui.use(['form', 'layer'],
            function() {
                $ = layui.jquery;
                var form = layui.form,
                layer = layui.layer;
                var router = layui.router();
                var subjectId = router.search.subjectId;

                $.get("/subjectBank/findSubjectById.action",{subjectId:subjectId},function (res) {
                    //给表单赋值
                    form.val("fm-filter", { //formTest 即 class="layui-form" 所在元素属性 lay-filter="" 对应的值
                        "subjectId": res.subjectId
                        ,"subjectPoints": res.subjectPoints // "name": "value"
                        ,"subjectContent":res.subjectContent
                        ,"optionsA":res.optionsA
                        ,"optionsB":res.optionsB
                        ,"optionsC":res.optionsC
                        ,"optionsD":res.optionsD
                        ,"subjectAnswer": res.subjectAnswer
                        ,"subjectAnalytical": res.subjectAnalytical
                    });
                },"json")
                //自定义验证规则
                form.verify({
                    /*nikename: function(value) {
                        if (value.length < 5) {
                            return '昵称至少得5个字符啊';
                        }
                    }*/
                });

                //监听提交
                form.on('submit(add)',
                function(data) {
                    $.get("/subjectBank/updateSubjectById.action",data.field,function () {
                        //发异步，把数据提交给php
                        layer.alert("更新成功", {
                                icon: 6
                            },
                            function() {
                                //关闭当前frame
                                xadmin.close();
                                // 可以对父窗口进行刷新
                                xadmin.father_reload();
                            }
                        );
                    });
                    return false;
                });

            });
        </script>
        <script>var _hmt = _hmt || []; (function() {
                var hm = document.createElement("script");
                hm.src = "https://hm.baidu.com/hm.js?b393d153aeb26b46e9431fabaf0f6190";
                var s = document.getElementsByTagName("script")[0];
                s.parentNode.insertBefore(hm, s);
            })();</script>
    </body>

</html>
